<h2 class="centered {{type}}">{{typeName}} {{name}}</h2>
<div class="block columns">
	{{#each routes}}
		<div class="block rows">
			<h3 class="centered">{{name}}</h3>
			<div class="padded block scrollable">
				<ol>
					{{#each stops}}
						<li data-stop-code="{{code}}">
							<a class="nowrap" href="#{{code}}/{{../../type}}/{{../../name}}">
								{{name}} ({{code}})
							</a>
						</li>
					{{/each}}
				</ol>
			</div>
		</div>
	{{/each}}
</div>
